        <TextBlock Text="总金额：" Canvas.Left="329" Canvas.Top="165"/>
        <TextBlock Text="中奖金额：" Canvas.Left="316" Canvas.Top="187"/>
        <TextBlock Text="盈亏：" Canvas.Left="342" Canvas.Top="209"/>
        <TextBlock Text="开奖号码：" Canvas.Left="113" Canvas.Top="250"/>
        <TextBlock Text="投注号码：" Canvas.Left="115" Canvas.Top="292"/>

        <TextBlock x:Name="彩种" Text="重庆时时彩" Canvas.Left="191" Canvas.Top="77"/>
        <TextBlock x:Name="玩法标签" Text="三星直选" Canvas.Left="191" Canvas.Top="99"/>
        <TextBlock x:Name="玩法" Text="前三复式" Canvas.Left="191" Canvas.Top="121"/>
        <TextBlock x:Name="期号" Text="20131212010" Canvas.Left="191" Canvas.Top="143"/>
        <TextBlock x:Name="返点" Text="100%" Canvas.Left="191" Canvas.Top="165"/>
        <TextBlock x:Name="注数" Text="100" Canvas.Left="191" Canvas.Top="187"/>
        <TextBlock x:Name="倍数" Text="2" Canvas.Left="191" Canvas.Top="209"/>
        <TextBlock x:Name="订单号" Text="22222222" Canvas.Left="386" Canvas.Top="77"/>
        <TextBlock x:Name="用户" Text="admin" Canvas.Left="386" Canvas.Top="99"/>
        <TextBlock x:Name="下注时间" Text="2013年2月22号" Canvas.Left="386" Canvas.Top="121"/>
        <TextBlock x:Name="单注价格" Text="2.22" Canvas.Left="386" Canvas.Top="143"/>

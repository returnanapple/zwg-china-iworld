<controls:ChildWindow
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:local="clr-namespace:zwg_china.client" x:Class="zwg_china.client.TableRowOfLotteryTool_ChildWindow"
           HasCloseButton="False" Closed="ReBet">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontFamily" Value="Microsoft YaHei"/>
                <Setter Property="Foreground" Value="#FFD7A471"/>
            </Style>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>

    <Canvas Width="600" Height="500">
        <Canvas.Background>
            <ImageBrush Stretch="None" ImageSource="Images/ChildWindowBg.png"/>
        </Canvas.Background>

        <TextBlock Text="彩种：" Canvas.Left="150" Canvas.Top="77"/>
        <TextBlock Text="玩法标签：" Canvas.Left="124" Canvas.Top="99"/>
        <TextBlock Text="玩法：" Canvas.Left="150" Canvas.Top="121"/>
        <TextBlock Text="期号：" Canvas.Left="150" Canvas.Top="143"/>
        <TextBlock Text="返点：" Canvas.Left="150" Canvas.Top="165"/>
        <TextBlock Text="注数：" Canvas.Left="150" Canvas.Top="187"/>
        <TextBlock Text="倍数：" Canvas.Left="150" Canvas.Top="209"/>

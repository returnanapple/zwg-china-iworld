<UserControl x:Class="zwg_china.client.TableTool"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="css.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="text_titile" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Margin" Value="10,0,10,0"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontFamily" Value="Fonts/msyh.ttf#Microsoft YaHei"/>
            </Style>
            <Style x:Key="bg_single" TargetType="Grid">
                <Setter Property="Height" Value="30"/>
                <Setter Property="Background" Value="#FFF3F3F3"/>
            </Style>
            <Style x:Key="bg_double" TargetType="Grid">
                <Setter Property="Height" Value="30"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Name="root" MinHeight="105">
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <!--外框-->
        <StackPanel Name="_bg" Grid.Row="1" Background="#45000000" Margin="7,-7,7,0">
            <Grid/>
        </StackPanel>
        <!--标题-->
        <Grid Name="_title">
            <Grid.Background>
                <ImageBrush Stretch="None" ImageSource="Images/TableHeadBg.png"/>
            </Grid.Background>
        </Grid>
        <!--列表-->
        <ItemsControl Name="_list" Grid.Row="1"/>
        <!--分页选择区-->
        <StackPanel Name="_page" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="15,0,0,0"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="FontFamily" Value="Fonts/msyh.ttf#Microsoft YaHei"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="首页" />
            <TextBlock Text="上一页" />
            <TextBlock Text="1/1"/>
            <TextBlock Text="下一页" />
            <TextBlock Text="尾页"/>
        </StackPanel>
    </Grid>
</UserControl>

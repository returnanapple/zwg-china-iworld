<UserControl x:Class="zwg_china.backstage.control.TicketsPage_TableRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:loc="clr-namespace:zwg_china.backstage.control"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="_CssOfTableRow.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Width="750" Height="30">
        <Grid Width="130">
            <TextBlock Name="text_Name" Text="名称"/>
        </Grid>
        <Grid Width="120">
            <TextBlock Name="text_Issue" Text="当前期号" />
        </Grid>
        <Grid Width="150">
            <TextBlock Name="text_LotteryValues" Text="当期开奖" />
        </Grid>
        <Grid Width="100">
            <TextBlock Name="text_Hide" Text="隐藏"/>
        </Grid>
        <Grid Width="100">
            <TextBlock Name="text_Order" Text="排序"/>
        </Grid>
        <StackPanel Width="150">
            <HyperlinkButton Content="配置" Click="ShowFullWindow" />
        </StackPanel>
    </StackPanel>
</UserControl>

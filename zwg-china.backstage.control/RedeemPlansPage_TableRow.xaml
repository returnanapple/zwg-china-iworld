<UserControl x:Class="zwg_china.backstage.control.RedeemPlansPage_TableRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="_CssOfTableRow.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Width="750" Height="30">
        <Grid Width="450">
            <TextBlock Name="text_Title" Text="标题"/>
        </Grid>
        <Grid Width="120">
            <TextBlock Name="text_Status" Text="状态" />
        </Grid>
        <StackPanel Width="180">
            <HyperlinkButton Content="详细信息" Click="ShowFullWindow" />
            <HyperlinkButton Name="button_Remove" Content="删除" Click="Remove"/>
        </StackPanel>
    </StackPanel>
</UserControl>

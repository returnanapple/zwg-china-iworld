<UserControl x:Class="zwg_china.backstage.control.SystemQuotasPage_TableRow_Detail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:loc="clr-namespace:zwg_china.backstage.control"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="_CssOfTableRow.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <loc:IntConverter x:Key="IntConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Width="75" Height="90">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Rebate}"/>
        <TextBox Grid.Row="1" Width="55" HorizontalAlignment="Left" Margin="10,0,10,0" 
                 Text="{Binding Sum,Mode=TwoWay,Converter={StaticResource IntConverter}}"/>
    </Grid>
</UserControl>

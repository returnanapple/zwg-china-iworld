<UserControl x:Class="zwg_china.backstage.control.ChasingsPage_TableRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:loc="clr-namespace:zwg_china.backstage.control"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="_CssOfTableRow.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Width="750" Height="30">
        <Grid Width="200">
            <TextBlock Name="text_HowToPlay" Text="方案"/>
        </Grid>
        <Grid Width="130">
            <TextBlock Name="text_StartIssue" Text="起始期号" />
        </Grid>
        <Grid Width="100">
            <TextBlock Name="text_Owner" Text="用户" />
        </Grid>
        <Grid Width="120">
            <TextBlock Name="text_Pay" Text="金额"/>
        </Grid>
        <Grid Width="100">
            <TextBlock Name="text_Status" Text="状态"/>
        </Grid>
        <StackPanel Width="100">
            <HyperlinkButton Content="详细信息" Click="ShowFullWindow" />
        </StackPanel>
    </StackPanel>
</UserControl>

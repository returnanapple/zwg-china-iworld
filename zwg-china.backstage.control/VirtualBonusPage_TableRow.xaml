<UserControl x:Class="zwg_china.backstage.control.VirtualBonusPage_TableRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:loc="clr-namespace:zwg_china.backstage.control"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="_CssOfTableRow.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Width="750" Height="30">
        <Grid Width="300">
            <TextBlock Name="text_Ticket" Text="对应的彩票"/>
        </Grid>
        <Grid Width="250">
            <TextBlock Name="text_Sum" Text="虚拟金额" />
        </Grid>
        <StackPanel Width="200">
            <HyperlinkButton Name="button_Edit" Content="编辑" Click="Edit" />
            <HyperlinkButton Name="button_Remove" Content="删除" Click="Remove" />
        </StackPanel>
    </StackPanel>
</UserControl>

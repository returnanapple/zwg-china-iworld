<UserControl x:Class="zwg_china.backstage.control.AdministratorGroupPage_TableRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:loc="clr-namespace:zwg_china.backstage.control"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="_CssOfTableRow.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Width="750" Height="30">
        <Grid Width="200">
            <TextBlock Name="text_Name" Text="名称"/>
        </Grid>
        <Grid Width="200">
            <TextBlock Name="text_CountOfCanDo" Text="拥有权限" />
        </Grid>
        <Grid Width="200">
            <TextBlock Name="text_IsCustomerService" Text="是否客服人员" />
        </Grid>
        <StackPanel Width="150">
            <HyperlinkButton Name="button_Edit" Content="编辑" Click="Edit" />
            <HyperlinkButton Name="button_Remove" Content="移除" Click="Remove" />
        </StackPanel>
    </StackPanel>
</UserControl>
